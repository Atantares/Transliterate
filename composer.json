{
  "name": "elforastero/transliterate",
  "description": "Transliteration package for laravel 5",
  "version": "2.0.0",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Eugene Dzhumak",
      "email": "elforastero@ya.ru"
    }
  ],
  "autoload": {
    "psr-4": {
      "ElForastero\\Transliterate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElForastero\\Transliterate\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1",
    "illuminate/support": "~5"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "orchestra/testbench": "^3.7",
    "friendsofphp/php-cs-fixer": "^2.13"
  },
  "extra": {
    "laravel": {
      "providers": [
        "ElForastero\\Transliterate\\ServiceProvider"
      ],
      "aliases": {
        "Transliteration": "ElForastero\\Transliterate\\Facade"
      }
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "php-cs-fixer fix src/ --dry-run --diff --rules=@Symfony"
  }
}
